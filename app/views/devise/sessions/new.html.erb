<h2 class="span12">Sign in</h2>
<div class="span12">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
 :html => { :class => "form-horizontal"}) do |f| %>

 <div class="control-group">
  <label class="control-label" for="user_email">Email</label>
  <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
 </div>

 <div class="control-group">
  <label class="control-label" for="user_password">Password</label>
  <div class="controls"><%= f.password_field :password %></div>
 </div>

 <div class="control-group">
  <% if devise_mapping.rememberable? -%>
    <div class="controls"><%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end -%>

    <div><%= f.submit "Sign in" %></div>
  </div>


<% end %>
  <br>
    <div class="controls"><%= render "devise/shared/links" %></div>
 </div>
</div>